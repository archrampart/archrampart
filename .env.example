# ArchRampart Audit Tool - Environment Variables Example
# Copy this file to .env and update the values according to your needs

# PostgreSQL Configuration
POSTGRES_USER=archrampart
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=archrampart_audit
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=8000
SECRET_KEY=change-this-secret-key-in-production-use-a-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
DEBUG=True
ALLOWED_ORIGINS=*

# File Upload
MAX_UPLOAD_SIZE=10485760

# i18n
DEFAULT_LANGUAGE=tr
SUPPORTED_LANGUAGES=tr,en

# Frontend Configuration
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:8000

# Admin User (will be created on first startup)
ADMIN_EMAIL=admin@archrampart.com
ADMIN_PASSWORD=change-this-admin-password
ADMIN_NAME=Platform Admin
